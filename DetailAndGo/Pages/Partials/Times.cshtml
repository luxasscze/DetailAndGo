@model List<string>

@foreach (string time in Model)
{
    <div class="col-6 col-md-4" style="margin-bottom: 10px;">
        <div class="time-button" id="time-@time.Replace(":", "")">@time</div>
    </div>

    <script>
        $('#time-@time.Replace(":", "")').on('click', function () {
            if ($('#time-@time.Replace(":", "")').hasClass('time-button')) {
                $('.time-button-active').addClass('time-button');
                $('.time-button-active').removeClass('time-button-active');
                $('#time-@time.Replace(":", "")').removeClass('time-button');
                $('#time-@time.Replace(":", "")').addClass('time-button-active');
            }
            else {
                $('#time-@time.Replace(":", "")').removeClass('time-button-active');
                $('#time-@time.Replace(":", "")').addClass('time-button');
            }
        });
    </script>
}