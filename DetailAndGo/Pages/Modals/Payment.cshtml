<style>
    .card-card {
        height: 120px;
        width: 100%;
        margin-bottom: 10px;
        background: linear-gradient(117deg, rgba(185,14,109,0.1) 0%, rgba(62,146,154,0.7) 100%);
        border-radius: 10px;
        position: relative;
        filter: blur(0px);
        cursor: pointer;
    }

    .card-add {
        height: 60px;
        width: 100%;
        margin-bottom: 10px;
        box-shadow: 0px 0px 2px 1px #3e4;
    }

    .card-logo {
        position: absolute;
        top: 5px;
        right: 5px;
    }

    .card-last-four {
        position: absolute;
        bottom: 35px;
        left: 10px;
    }

    .card-expiry-date {
        position: absolute;
        bottom: 5px;
        left: 10px;
    }

    .card-active {
        background: linear-gradient(117deg, rgba(50,255,150,0.1) 0%, rgba(62,146,154,0.7) 100%);
        box-shadow: 0px 0px 30px 1px rgba(155,146,200,0.9);
        border: 2px ridge #fff;
        filter: none;
    }

    .card-delete {
        position: absolute;
        top: 5px;
        left: 10px;
        color: #f00;
    }

    .add-text {
        color: #fff;
        margin: auto;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .card-card {
            width: 100%;
        }
    }
</style>

<link rel="stylesheet" href="~/css/Border.css" />

<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="paymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="background-color: rgba(50, 50, 50, 0.0); border: none;">
            <div class="modal-body">
                <div class="row">
                    <h2 class="text-light text-center" id="carsModalLabel" style="font-size: 24px;">Which payment method do you wish to use?</h2>
                </div>

                <div style="width: 50%; margin: 10px auto;">
                    <div class="row text-light" id="cardsContainer">
                    </div>
                </div>

                <div class="row" style="margin: 30px auto; width: 50%;">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="row">
                                <a class="btn btn-outline-success text-center" style="border-radius: 0px;" id="test"><i class="fa fa-circle-plus"></i></a>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="row">
                                <a class="btn btn-success btn-block" style="border-radius: 0px;" id="confirmPaymentBtn">CONFIRM</a>
                            </div>
                        </div>
                        <a class="btn btn-secondary" style="margin-top: 20px; border-radius: 0px;" data-bs-dismiss="modal" id="cancelServicesBtn">Cancel</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<script>
    let defaultP = getCustomerDefaultPaymentMethodId();
    $(document).ready(function () {       
        $('#paymentModal').on('show.bs.modal', function () {
            $('#cardsContainer').html('');
            getCustomerPaymentMethods().forEach(renderCard);            
            console.log(defaultP);
        });
    });

    function renderCard(card) {
        console.log(card.id);
        if (card.card.brand == 'visa') {
            if (defaultP == card.id) {
                $('#cardsContainer').append('<div class="col-lg-6"><div class= "card-card card-active" id="' + card.id +  '"><div class="card-logo"><img src="/images/creditcards/visa.png" height = "20"/></div><div class="card-delete"><i class="fa fa-times"> </i></div><div class="card-last-four text-light"><span class="text-muted"> XXXX XXXX XXXX </span>' + card.card.last4 + '</div><div class="card-expiry-date text-light">' + card.card.expMonth + '/' + card.card.expYear.toString().slice(-2) + '</div></div></div>');
            }
            else {
                $('#cardsContainer').append('<div class="col-lg-6"><div class= "card-card" id="' + card.id + '"><div class="card-logo"><img src="/images/creditcards/visa.png" height = "20"/></div><div class="card-delete"><i class="fa fa-times"> </i></div><div class="card-last-four text-light"><span class="text-muted"> XXXX XXXX XXXX </span>' + card.card.last4 + '</div><div class="card-expiry-date text-light">' + card.card.expMonth + '/' + card.card.expYear.toString().slice(-2) + '</div></div></div>');
            }
        }
        if (card.card.brand == 'mastercard') {
            if (defaultP == card.id) {
                $('#cardsContainer').append('<div class="col-lg-6"><div class= "card-card card-active" id="' + card.id + '"><div class="card-logo"><img src="/images/creditcards/mastercard2.png" height = "20"/></div><div class="card-delete"><i class="fa fa-times"> </i></div><div class="card-last-four text-light"><span class="text-muted"> XXXX XXXX XXXX </span>' + card.card.last4 + '</div><div class="card-expiry-date text-light">' + card.card.expMonth + '/' + card.card.expYear.toString().slice(-2) + '</div></div></div>');
            }
            else {
                $('#cardsContainer').append('<div class="col-lg-6"><div class= "card-card" id="' + card.id + '"><div class="card-logo"><img src="/images/creditcards/mastercard2.png" height = "20"/></div><div class="card-delete"><i class="fa fa-times"> </i></div><div class="card-last-four text-light"><span class="text-muted"> XXXX XXXX XXXX </span>' + card.card.last4 + '</div><div class="card-expiry-date text-light">' + card.card.expMonth + '/' + card.card.expYear.toString().slice(-2) + '</div></div></div>');
            }
        }
        if (card.card.brand == 'amex') {
            if (defaultP == card.id) {
                $('#cardsContainer').append('<div class="col-lg-6"><div class= "card-card card-active" id="' + card.id + '"><div class="card-logo"><img src="/images/creditcards/amex2.png" height = "20"/></div><div class="card-delete"><i class="fa fa-times"> </i></div><div class="card-last-four text-light"><span class="text-muted"> XXXX XXXX XXXX </span>' + card.card.last4 + '</div><div class="card-expiry-date text-light">' + card.card.expMonth + '/' + card.card.expYear.toString().slice(-2) + '</div></div></div>');
            }
            else {
                $('#cardsContainer').append('<div class="col-lg-6"><div class= "card-card" id="' + card.id + '"><div class="card-logo"><img src="/images/creditcards/amex2.png" height = "20"/></div><div class="card-delete"><i class="fa fa-times"> </i></div><div class="card-last-four text-light"><span class="text-muted"> XXXX XXXX XXXX </span>' + card.card.last4 + '</div><div class="card-expiry-date text-light">' + card.card.expMonth + '/' + card.card.expYear.toString().slice(-2) + '</div></div></div>');
            }
        }

        $('#' + card.id).on('click', function () {
            console.log(card.id + ' clicked...');
            $('.card-card').removeClass('card-active');
            $(this).addClass('card-active');
        });
    }

    function getCustomerPaymentMethods() {
        let paymentMethods;
        $.ajax({
            url: "/CreateBooking?handler=GetCustomerPaymentMethods",
            data: {},
            type: "GET",
            async: false,
            cache: false,
            beforeSend: function () {

            },
            success: function (data) {
                paymentMethods = data;
            },
            error: function (error) {
                console.log(error);
            },
            complete: function () {
                console.log('finished...');
            },
        });
        return paymentMethods;
    }

    function getCustomerDefaultPaymentMethodId() {
        let defaultPaymentMethod;
        $.ajax({
            url: "/CreateBooking?handler=GetDefaultPaymentMethod",
            data: {},
            type: "GET",
            async: false,
            cache: false,
            beforeSend: function () {

            },
            success: function (data) {
                defaultPaymentMethod = data;
            },
            error: function (error) {
                console.log(error);
            },
            complete: function () {
                console.log('finished...');
            },
        });
        return defaultPaymentMethod;
    }

    
</script>