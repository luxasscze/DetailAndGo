<link rel="stylesheet" href="~/css/Services.css" />

<!-- Services Modal -->
<div class="modal fade" id="servicesModal" tabindex="-1" role="dialog" aria-labelledby="servicesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="background-color: rgba(50, 50, 50, 0.7)">
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <h2 class="modal-title text-light" id="carsModalLabel" style="font-size: 24px;">What can we do for you?</h2>
                    </div>
                    <div class="col">
                        <a class="float-end" data-bs-dismiss="modal" aria-label="Close" style="background-color: transparent;" href="#">
                            <span class="text-dark"><i class="fa fa-times" style="font-size: 22px;"></i></span>
                        </a>
                    </div>
                </div>
                <hr class="bg-light" />
                <div class="row">
                    <div class="row text-light">
                        <script>selectedServices = [];</script>
                        @foreach (var service in Model.AllMainServices)
                        {
                            <div class="col-md-6" style="margin-bottom: 30px;">
                                <div class="card bg-dark service-card">
                                    <a href="#">
                                        <div class="card-header bg-dark" id="service-@service.Id">
                                            <div class="row">
                                                <div class="col-9">
                                                    <h2 class="text-warning">@service.Name</h2>
                                                </div>
                                                <div class="col-3">
                                                    <div class="badge text-light" style="font-size: 20px; background-color: #333; border: 1px solid #999;">£ @service.Price</div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                    <div class="card-body" style="background-color: #333;">
                                        <label class="text-light">@service.Description</label>
                                    </div>
                                    @if (service.IsCustomisable)
                                    {
                                        <div class="card-footer" style="background-color: #222;">
                                            <div class="accordion" id="accordion-@service.Id">
                                                <div class="accordion-item" style="background-color: rgba(70, 70, 70, .2);">
                                                    <h2 class="accordion-header" id="heading-@service.Id">
                                                        <div class="accordion-button" style="color: #fff; background-color: #222;" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@service.Id" aria-expanded="false" aria-controls="collapse-@service.Id">
                                                            <label class="text-light">Customise</label>
                                                        </div>
                                                    </h2>
                                                    <div id="collapse-@service.Id" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordion-@service.Id">
                                                        <div class="accordion-body" style="font-size: 24px;">
                                                            @if (service.SubServices == null)
                                                            {
                                                                
                                                            }
                                                            else
                                                            {
                                                                List<DetailAndGo.Models.Service> ser = new List<DetailAndGo.Models.Service>();
                                                                foreach (var subService in Model.AllSubServices)
                                                                {                                                                    
                                                                    string[] subServiceIds = service.SubServices.Split(',');
                                                                    foreach (string id in subServiceIds)
                                                                    {
                                                                        var serviceToAdd = ((IEnumerable<dynamic>)Model.AllSubServices).FirstOrDefault(s => s.Id == Convert.ToInt32(id));
                                                                        ser.Add(serviceToAdd);
                                                                    }
                                                                    break;
                                                                }
                                                                
                                                                foreach (DetailAndGo.Models.Service itm in ser)
                                                                {
                                                                    <div class="btn btn-outline-success" style="width: 100%; margin: 5px; font-size: 20px;"><div class="float-start">@itm.Name</div> <div class="badge bg-warning float-end text-dark">+ £@itm.Price</div></div>
                                                                }
                                                            }

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="card-footer" style="background-color: #222;">
                                            <div class="" style="color: #fff; background-color: #222;" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@service.Id" aria-expanded="false" aria-controls="collapse-@service.Id">
                                                <label class="text-muted">No Customatisation</label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <script>
                                $('#service-@service.Id').on('click', function () {
                                    console.log('Service' + @service.Id + ' has been clicked');
                                    if ($('#service-@service.Id').hasClass('bg-dark')) {
                                        $('#service-@service.Id').removeClass('bg-dark');
                                        $('#service-@service.Id').addClass('bg-success');
                                        selectedServices.push('@service.Id');
                                    }
                                    else {
                                        $('#service-@service.Id').removeClass('bg-success');
                                        $('#service-@service.Id').addClass('bg-dark');
                                        selectedServices.remove('@service.Id');
                                    }
                                    if ($('.bg-success').length > 0) {
                                        $('#confirmServicesBtn').removeClass('disabled');
                                        $('#confirmServicesBtn').removeClass('btn-outline-secondary');
                                        $('#confirmServicesBtn').addClass('btn-success');
                                    }
                                    else {
                                        $('#confirmServicesBtn').addClass('disabled');
                                        $('#confirmServicesBtn').removeClass('btn-success');
                                        $('#confirmServicesBtn').addClass('btn-outline-secondary');
                                    }
                                    console.log('Selected services: ' + selectedServices);
                                });
                            </script>
                        }
                    </div>
                </div>
                <div class="row" style="margin: 20px 100px;">
                    <a class="btn btn-outline-secondary btn-block disabled" href="#" id="confirmServicesBtn">CONFIRM</a>
                    <a class="btn btn-outline-secondary" style="margin-top: 20px;" href="#" id="cancelServicesBtn">Cancel</a>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    Array.prototype.remove = function () {
        var what, a = arguments, L = a.length, ax;
        while (L && this.length) {
            what = a[--L];
            while ((ax = this.indexOf(what)) !== -1) {
                this.splice(ax, 1);
            }
        }
        return this;
    };
</script>