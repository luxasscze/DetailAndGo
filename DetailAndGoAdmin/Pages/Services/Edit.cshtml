@page
@model DetailAndGoAdmin.Pages.Services.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-light">Edit Service - @Model.Service.Name</h1>
<hr />
<div class="row text-light">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Service.Id" />
            <div class="form-group">
                <label asp-for="Service.Name" class="control-label"></label>
                <input asp-for="Service.Name" class="form-control" />
                <span asp-validation-for="Service.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Price" class="control-label"></label>
                <input asp-for="Service.Price" class="form-control" />
                <span asp-validation-for="Service.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Description" class="control-label"></label>
                <input asp-for="Service.Description" class="form-control" />
                <span asp-validation-for="Service.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.CreatedDate" class="control-label"></label>
                <input asp-for="Service.CreatedDate" class="form-control" />
                <span asp-validation-for="Service.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Image" class="control-label"></label>
                <input asp-for="Service.Image" class="form-control" />
                <span asp-validation-for="Service.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Category" class="control-label"></label>
                <input asp-for="Service.Category" class="form-control" />
                <span asp-validation-for="Service.Category" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Service.IsActive" /> @Html.DisplayNameFor(model => model.Service.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Service.StripeServiceId" class="control-label"></label>
                <input asp-for="Service.StripeServiceId" class="form-control" />
                <span asp-validation-for="Service.StripeServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
