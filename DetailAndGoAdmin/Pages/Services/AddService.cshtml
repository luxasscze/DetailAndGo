@page
@model DetailAndGoAdmin.Pages.Services.AddServiceModel

@{
    ViewData["Title"] = "Add New Service";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="text-light" margin: 20px;>
    <h1>Add New Service</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Service.StripeServiceId" name="StripeServiceId" />
                <input type="hidden" asp-for="Service.Category" name="Category" />
                <input type="hidden" asp-for="Service.Image" name="Image" />
                <input type="hidden" asp-for="Service.CreatedDate" name="CreatedDate" />
                <input type="hidden" asp-for="Service.IsActive" name="IsActive" />
                <div class="form-group">
                    <label asp-for="Service.Name" class="control-label"></label>
                    <input asp-for="Service.Name" class="form-control" />
                    <span asp-validation-for="Service.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Service.Price" class="control-label"></label>
                    <input asp-for="Service.Price" class="form-control" type="number" />
                    <span asp-validation-for="Service.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Service.PriceMedium" class="control-label"></label>
                    <input asp-for="Service.PriceMedium" class="form-control" type="number" />
                    <span asp-validation-for="Service.PriceMedium" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Service.PriceLarge" class="control-label"></label>
                    <input asp-for="Service.PriceLarge" class="form-control" type="number" />
                    <span asp-validation-for="Service.PriceLarge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Service.Description" class="control-label"></label>
                    <input asp-for="Service.Description" class="form-control" />
                    <span asp-validation-for="Service.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Service.TimeToFinishMinsS" class="control-label"></label>
                    <input asp-for="Service.TimeToFinishMinsS" class="form-control" />
                    <span asp-validation-for="Service.TimeToFinishMinsS" class="text-danger"></span>

                    <label asp-for="Service.TimeToFinishMinsM" class="control-label"></label>
                    <input asp-for="Service.TimeToFinishMinsM" class="form-control" />
                    <span asp-validation-for="Service.TimeToFinishMinsM" class="text-danger"></span>

                    <label asp-for="Service.TimeToFinishMinsL" class="control-label"></label>
                    <input asp-for="Service.TimeToFinishMinsL" class="form-control" />
                    <span asp-validation-for="Service.TimeToFinishMinsL" class="text-danger"></span>
                    
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Service.IsSubService" /> @Html.DisplayNameFor(model => model.Service.IsSubService)
                    </label>
                    <span asp-validation-for="Service.IsSubService" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
